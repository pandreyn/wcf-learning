<Window x:Class="GeoLib.WindowsHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="237" Width="412" Closing="Window_Closing" KeyUp="Window_KeyUp">
    <Grid Margin="0,0,2,-2">
        <Button x:Name="BtnStart" Content="Start Services" Margin="40,10,40,0" VerticalAlignment="Top" Click="BtnStart_Click"/>
        <Button x:Name="BtnStop" Content="Stop Services" Margin="40,35,40,0" VerticalAlignment="Top" Click="BtnStop_Click"/>
        <Label Name="lblMessage" Content="" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Width="382" Height="74" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
        <Button Content="In-Proc Service" Margin="40,104,0,0" VerticalAlignment="Top" Width="101" HorizontalAlignment="Left" Click="Button_Click"/>

    </Grid>
</Window>
